<% layout('layouts/boilerplate') -%>
<h1>All campgrounds</h1>
<% for(campground of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img src="<%= campground.image %>" alt="campground image" class="img-fluid">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= campground.title %></h5>
          <p class="card-text"><%= campground.description %></p>
          <div class="text-secondary"><%= campground.location %></div>
          <a href="/campgrounds/<%=campground.id%>" class="btn btn-primary">View Campground</a>
        </div>
      </div>
    </div>
</div>
<% } %>
